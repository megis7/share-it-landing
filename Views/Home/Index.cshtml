@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link href='@Url.Content("~/css/landing.css")' rel="stylesheet" type="text/css"/>
}

<div id="carousel-overlay-div" class="row w-100 h-100">
    <div class="container flex-column d-flex carousel-overlay" style="margin-top:66px; margin-left: -1%;">
        <div class="row">
            <div class="col-xs-1"></div>
            <p class="no-select white-text shinny-text text-left col-xs-8">
                Rent your special equipment anywhere
            </p>
        </div>
        
        <div class="row">
            <div class="col-xs-1"></div>
            <p class="no-select white-text shinny-text col-xs-8">
            Pay low and Travel light</p>
        </div>

        <div class="row">
            <div class="col-xs-1"></div>
            <p class="no-select white-text shinny-text text-left col-xs-8">
            Have Fun</p>
        </div>
        
        <div class="row flex-fill d-flex align-items-end">
            <div class="card col-xs-8 small-text rounded-corners" style="padding: 0.5em 2em 0 2em; width: 28em; background-color: rgba(183, 219, 247, 0.9);">
                <div class="card-body">
                    <div class="card-text">
                        <div class="row justify-content-center">
                            <p class="no-select black-text text-center moderate-text">
                            Everyone can <em>Share It</em>, anyone can rent it.<br>And something more about us.</p>
                        </div>

                        <div class="row" style="height: 1em;"></div>
                        <div class="row" style="height: 1em;"></div>

                        <div class="row justify-content-center">
                            <p class="no-select black-text text-center">
                            Our services are still under development.</p>
                        </div>

                        <div class="row justify-content-center">
                            <p class="no-select black-text text-center">
                            Subscribe and get notified when we are ready.</p>
                        </div>

                        <div class="row justify-content-center">
                            <form method="POST" asp-action="Subscribe" asp-controller="Home">
                                <div class="col">
                                    <div class="row">
                                        <div class="form-group">
                                            <input name="email" type="email" class="small-text form-control" placeholder="email@example.com">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <input type="submit" style="padding: 2px 0px;" class="btn btn-success small-text w-100" value="Get Notified"/>
                                    </div>
                                </div>
                            </form>     
                        </div>   

                        <div class="row" style="height: 1em;"></div>                                              
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>

<!-- Carousel -->
<div class="row flex-fill d-flex" style="overflow: hidden;">
    <div id="myCarousel" class="carousel slide w-100" data-ride="carousel" data-pause="false" data-interval="3000" >
        <div class="carousel-inner w-100 h-100" >
            <div class="carousel-item h-100 active"><img class="d-block w-100 h-100" src="~/images/jet_ski.jpg"></div>
            <div class="carousel-item h-100"><img class="d-block w-100" src="~/images/parachute_1.jpg"></div>
            <div class="carousel-item h-100"><img class="d-block w-100" src="~/images/parachute_2.jpg"></div>
            <div class="carousel-item h-100"><img class="d-block w-100" src="~/images/parachute_3.jpg"></div>
            <div class="carousel-item h-100"><img class="d-block w-100" src="~/images/ski_1.jpg"></div>
            <div class="carousel-item h-100"><img class="d-block w-100" src="~/images/ski_2.jpg"></div>
        </div>
    </div>
</div>